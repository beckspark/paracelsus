# Paracelsus Environment Configuration Template
# Copy to .env and fill in values for local development.
# In production, use AWS Secrets Manager or similar.

# =============================================================================
# AWS / LocalStack Credentials
# =============================================================================
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# OLTP Database (Source - represents RDS in production)
# =============================================================================
OLTP_HOST=oltp-db
OLTP_PORT=5432
OLTP_USER=admin
OLTP_PASSWORD=<your-oltp-password>
OLTP_DB=supervision

# Meltano tap-postgres config (uses OLTP as source)
TAP_POSTGRES_HOST=oltp-db
TAP_POSTGRES_PORT=5432
TAP_POSTGRES_USER=admin
TAP_POSTGRES_PASSWORD=<your-oltp-password>
TAP_POSTGRES_DATABASE=supervision

# =============================================================================
# OLAP Database (Warehouse - represents RDS in production)
# =============================================================================
OLAP_HOST=olap-db
OLAP_PORT=5432
OLAP_USER=warehouse
OLAP_PASSWORD=<your-olap-password>
OLAP_DB=analytics

# Meltano target-postgres config (OLAP warehouse)
TARGET_POSTGRES_HOST=olap-db
TARGET_POSTGRES_PORT=5432
TARGET_POSTGRES_USER=warehouse
TARGET_POSTGRES_PASSWORD=<your-olap-password>
TARGET_POSTGRES_DBNAME=analytics

# =============================================================================
# S3 / LocalStack
# =============================================================================
TAP_S3_CSV_BUCKET=paracelsus-landing
TAP_S3_CSV_AWS_ENDPOINT_URL=http://localstack:4566
LOCALSTACK_HOST=localstack

# =============================================================================
# HubSpot (Mock API in development, real API key in production)
# =============================================================================
TAP_HUBSPOT_API_KEY=<your-hubspot-api-key>

# =============================================================================
# Meltano / dbt
# =============================================================================
MELTANO_ENVIRONMENT=dev
DBT_PROFILES_DIR=/project/dbt
